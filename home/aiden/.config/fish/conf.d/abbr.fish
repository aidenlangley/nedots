# File ops
abbr -a -g mkdir    'mkdir -p'
abbr -a -g mv       'mv -v'
abbr -a -g cp       'cp -vr'
abbr -a -g rm       'rm -vr'

# Handy shortcuts
abbr -a -g l        'less'
abbr -a -g py       'python3'
abbr -a -g poweroff 'systemctl poweroff'
abbr -a -g reboot   'systemctl reboot'

# git
abbr -a -g gco 'git checkout'
abbr -a -g gps 'git push'
abbr -a -g gpl 'git pull'
abbr -a -g gcd 'git checkout develop'
abbr -a -g gcm 'git checkout main'
abbr -a -g gmd 'git merge develop'
abbr -a -g gmm 'git merge main'

# toolbox
abbr -a -g tb   'toolbox'
abbr -a -g tbls 'toolbox list'
abbr -a -g tbc  'toolbox_create'

# OpenSUSE
abbr -a -g z    'zypper'
abbr -a -g zy   'sudo zypper'
